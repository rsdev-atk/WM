<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="linear_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="linear_horizontal_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
    </style>

    <style name="text_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="text" parent="text_edit_text">
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="margin_tools_bar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="custom_progress_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="hint_color">
        <item name="android:textColorHint">#F44336</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="navbar_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_navbar_172</item>
        <item name="android:paddingTop">@dimen/spacing_medial_24</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:background">@drawable/navigation_drawer_background_image</item>
    </style>

    <style name="avatar_navbar">
        <item name="android:layout_width">@dimen/height_width_avatar</item>
        <item name="android:layout_height">@dimen/height_width_avatar</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>

    </style>

    <style name="text_navbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text_navbar</item>
    </style>


</resources>
